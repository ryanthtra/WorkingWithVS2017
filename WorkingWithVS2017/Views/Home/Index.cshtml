@model IEnumerable<WorkingWithVS2017.Models.Product>
@{ 
  Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Working with Visual Studio</title>
</head>
<body>
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model) {
        <tr>
          <td>@p.Name</td>
          <td>@p.Price</td>
        </tr>
      }      
    </tbody>    
  </table>
</body>
</html>